<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<style> p {font-size: 14px !important;}</style>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <h1><%= link_to post.title , post %><h1>
        <p align='right'>Posted <%= time_ago_in_words(post.created_at) %> ago</p>
        <hr>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

